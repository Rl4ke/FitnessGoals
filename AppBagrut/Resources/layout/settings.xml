<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#191A19"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="750px"
        android:layout_height="100px"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:text="Hello Itay! it's time to workout!"    
        android:textSize="18sp"/>
        <TextView
        android:layout_width="750px"
        android:layout_height="150px"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/white"
        android:text="Please enter your type of workout for today."
        android:textSize="18sp"/>
    <TextView
        android:layout_width="400px"
        android:layout_height="200px"
        android:textColor="#1E5128"
        android:text="YOUR GOAL"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
    />


    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:text="type of measuring - "
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="70px" />
        <TextView
            android:id="@+id/optiontextview1"
            android:textSize="18sp"
            android:text=" Choose Option"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/sortdownimageview1"
            android:src="@drawable/sortdown"
            android:layout_width="25dp"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
       
        <TextView
            android:textSize="18sp"

            android:layout_marginLeft="15dp"
            android:text="type of workout - "
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="70px" />
        <TextView
            android:id="@+id/optiontextview2"
            android:textSize="18sp"
            android:text=" Choose Option"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/sortdownimageView2"
            android:src="@drawable/sortdown"
            android:layout_width="25dp"
            android:layout_height="30dp"/>

    </LinearLayout>
</LinearLayout>